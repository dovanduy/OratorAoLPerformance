					<RepeatButton HorizontalAlignment="Left" Height="100" Margin="281,40,-381,-140" VerticalAlignment="Top" Width="100" Style="{DynamicResource RepeatButtonStyle2}" FocusVisualStyle="{DynamicResource ControlStyle1}">
