		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<StackPanel Height="30" Orientation="Horizontal">
			<Button Command="{Binding TestDataGridCommand}" Content="Test DataGrid" Margin="0,2,3,2"/>
